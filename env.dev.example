# Пример конфигурации для локальной разработки
# Скопируйте этот файл в .env.dev и заполните реальными значениями

# Токен разработческого бота (НЕ основного!)
BOT_TOKEN=your_dev_bot_token_here

# Токен для доступа к админке (можно оставить как есть для разработки)
ADMIN_TOKEN=dev_admin_token_changeme

# База данных для разработки
DATABASE_PATH=./dev_bot_data.db

# Порты для разработки
ADMIN_PORT=8000
BOT_PORT=8001

# Настройки для разработки (обычно не нужны)
# BOT_SHARED_SECRET=your_shared_secret
# ADMIN_URL=http://localhost:3000

# Логирование
LOG_LEVEL=DEBUG
